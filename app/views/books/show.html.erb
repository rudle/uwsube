<html>
  <head> 
  </head>
  <body>
    <div id="content">
      <p>
        <b>Title:</b>
        <%=h @book.title %>
      </p>

      <p>
        <b>Author:</b>
        <%=h @book.author %>
      </p>

      <p>
        <b>Isbn:</b>
        <%=h @book.isbn %>
      </p>

      <p>
        <b>Description:</b>
        <%=h @book.description %>
      </p>

    
      

      <%= link_to 'Edit', edit_book_path(@book) if current_user and current_user.id == @book.user_id %>
      <%= link_to 'Destroy', @book, :confirm => 'Are you sure?', :method => :delete  if current_user and current_user.id == @book.user_id %>
      <%= link_to 'Back', books_path %>
    </div>

    <form> 
      <h3>Contact Seller</h3>
      <p>
        <%= link_to 'Contact Seller', contact_seller_url %>
      </p>
    </form>



  </body>
</html>
