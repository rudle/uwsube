<% form_for(@book) do |f| %>
  <%= f.error_messages %>
  <div id="menu_title">
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :author %><br />
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :isbn %><br />
      <%= f.text_field :isbn %>
    </p>
    <p>
      <%= f.label :user_id %><br />
      <%= f.text_field :user_id %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit "Create" %>
    </p>
  </div>
<% end %>
