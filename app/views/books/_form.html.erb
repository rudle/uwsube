<% form_for(@book) do |f| %>
  <%= f.error_messages %>
  <div id="content">
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :author %>
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :isbn %>
      <%= f.text_field :isbn %>
    </p>
    <p>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit "Create" %>
    </p>
  </div>
<% end %>
